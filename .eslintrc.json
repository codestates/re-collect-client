{
	"env": {
			"node" : true,
			"browser": true,
			"es2021": true
	},
	"extends": [
			"eslint:recommended",
			"plugin:react/recommended"
	],
	"parserOptions": {
			"ecmaFeatures": {
					"jsx": true
			},
			"ecmaVersion": 12,
			"sourceType": "module"
	},
	"plugins": [
			"react"
	],
	"rules": {
			"quotes": ["error", "single"],
			"no-multi-spaces": ["error"],
	"indent": ["error", "tab", { "SwitchCase": 1 }],
			"no-mixed-spaces-and-tabs": ["error","smart-tabs"],
			"eqeqeq": ["error"],
			"react/prop-types": "off",
			"react/react-in-jsx-scope": "off",
			"react/jsx-uses-react": "off"
	}
	
}